<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DayTodayOfNASA" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_200</item>
        <!-- Customize your theme here. -->
        <item name="textColorConnected">@color/green</item>
    </style>

    <style name="IndigoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryDark">@color/indigo_dark</item>
        <item name="colorAccent">@color/indigo_lite</item>
        <item name="textColorPrimary">@color/black</item>
        <item name="textColorSecondary">@color/gray</item>
        <item name="textColorConnected">@color/green</item>
        <item name="textColorDisConnected">@color/gray_light</item>
    </style>

    <style name="PinkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink_dark</item>
        <item name="colorAccent">@color/pink_lite</item>
        <item name="textColorPrimary">@color/black</item>
        <item name="textColorSecondary">@color/gray</item>
        <item name="textColorConnected">@color/green</item>
        <item name="textColorDisConnected">@color/gray_light</item>
    </style>

    <style name= "AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@color/indigo_lite</item>
    </style>

</resources>